<UserControl x:Class="MHWSaveTransfer.UserControls.KeyValueDisplayThing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:root="clr-namespace:MHWSaveTransfer"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="200"
             x:Name="KeyValueDisplayThingElement">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Text="{Binding Key, ElementName=KeyValueDisplayThingElement}"/>
        <TextBlock Grid.Column="2" Text="{Binding Value, ElementName=KeyValueDisplayThingElement}"/>
    </Grid>
</UserControl>
