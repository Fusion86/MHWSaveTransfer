<Window x:Class="MHWSaveTransfer.Dialogs.EnterTextDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:root="clr-namespace:MHWSaveTransfer"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight" Width="300"
        ResizeMode="CanResize" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">

    <StackPanel Margin="5">
        <TextBox Text="{Binding Text}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button Content="Cancel" Margin="0,0,5,0" Width="100" Click="Button_Cancel"/>
            <Button Content="Apply" Width="100" Click="Button_Apply"/>
        </StackPanel>
    </StackPanel>
</Window>
